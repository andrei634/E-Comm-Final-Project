

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_commerce.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand color-nav-items" asp-area="" asp-controller="Home" asp-action="Index" class="color-nav-items">E-commerce</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark color-nav-items" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("User") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark color-nav-items" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                            </li>
                        }
                        @if (User.IsInRole("User")) 
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark color-nav-items" asp-area="" asp-controller="OrderTable" asp-action="Index">Orders</a>
                            </li>
                        }
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Product" asp-action="Index">
                            <div class="inputs-container">
                                <div class="inputs-container__drop-down">
                                  <input
                                    type="text"
                                    placeholder="Start a new search"
                                    class="inputs-container__drop-down__input"
                                    name="searchInput"
                                  />
                                  <button class="inputs-container__drop-down__button-search" type="submit">
                                    <ion-icon name="search-outline" class="search-icon"></ion-icon>
                                  </button>
                                </div>
                            </div>
                        </form>
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
